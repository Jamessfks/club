// Challenge 1:
public class VariableChallenge {
    public static void main(String[] args) {
        int integerVar = 10;
        double doubleVar = 5.5;
        boolean booleanVar = true;

        System.out.println("Integer Variable: " + integerVar);
        System.out.println("Double Variable: " + doubleVar);
        System.out.println("Boolean Variable: " + booleanVar);
    }
}

// Challenge 2:
public class SwapChallenge {
    public static void main(String[] args) {
        int a = 5;
        int b = 10;

        // Swapping without using a temporary variable
        a = a + b;
        b = a - b;
        a = a - b;

        System.out.println("After swapping: a = " + a + ", b = " + b);
    }
}
